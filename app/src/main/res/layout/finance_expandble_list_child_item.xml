<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/childLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView

                style="@style/textStyleHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="LOAN AMOUNT" />

            <TextView
                android:id="@+id/tvloanAmount"
                style="@style/textStyleHeading2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView

                style="@style/textStyleHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="LOAN TENURE" />

            <TextView
                android:id="@+id/tvLoanTenure"
                style="@style/textStyleHeading2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView

                style="@style/textStyleHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="EMI" />

            <TextView
                android:id="@+id/tvEmi"
                style="@style/textStyleHeading2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rejectionReasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            style="@style/textStyleHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REJECTION REASON"
            />
        <TextView
            style="@style/textStyleHeading2"
            android:id="@+id/rejectionReasonText"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
</LinearLayout>