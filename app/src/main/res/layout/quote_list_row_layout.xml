<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvDealerQuote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/ivInsurerLogo"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_img" />

                <TextView
                    android:id="@+id/tvInsurerName"
                    style="@style/textStyleHeading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text="IFFCO Tokio "
                    android:textColor="@color/insurance_dark_gray"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/dropDownArrow"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:focusable="true"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_down_arrow" />
                <!--   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="right"
                       android:layout_gravity="right|center_vertical"
                       android:orientation="horizontal">

                       <TextView

                           style="@style/textStyleHeading2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/idv"
                           android:textColor="@color/hintColor"/>

                       <TextView
                           android:id="@+id/tvIdvValue"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="6dp"
                           android:drawableLeft="@drawable/rupee_symbol_grey"
                           android:drawablePadding="4dp"
                           android:text="@string/idvValue"
                           android:textColor="@color/textColor"
                           android:textSize="16sp"/>

                   </LinearLayout>-->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/insurance_background" />

            <!--   <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_vertical"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tvPremium"
                       style="@style/textStyleHeading2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/premium"
                       android:textColor="@color/hintColor"/>

                   <TextView
                       android:id="@+id/tvPremiumValue"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:drawableLeft="@drawable/rupee_icon_orange_small"
                       android:drawablePadding="4dp"
                       android:text="@string/premium_value"
                       android:textColor="@color/orange"
                       android:textSize="16sp"/>


               </LinearLayout>-->
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/expand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFinalOd"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/final_od"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvFinalOdValue"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="@string/final_od_value"
                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalTp"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_tp"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvTotalTpValue"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="@string/total_tp_value"
                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_tax"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvServiceTax"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="4,200"
                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/odLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:id="@+id/oldLayoutOD"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOdDiscountPercent"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OD DISCOUNT(%)"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvOdDiscountPercentValue"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/final_od_value"

                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/oldLayoutODDiscount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOdDiscountPremium"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OD DISCOUNT"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvOdDiscountPremiumValue"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="@string/total_tp_value"
                            android:textColor="@color/insurance_dark_gray"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/zeroDepAmountLayout"
                        android:layout_width="0dp"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/zeroDepAmount"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ZERO DEPRECIATION"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/zeroDepValue"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="@string/total_tp_value"
                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ncbLayout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp">


                    <LinearLayout
                        android:id="@+id/ncbLayoutPercentage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNCBtext"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ncb"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvNCBPercent"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/final_od_value"

                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ncbLayoutValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNCBValueText"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ncb_value"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvNCBValue"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="@string/total_tp_value"
                            android:textColor="@color/insurance_dark_gray"

                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deductiblesValuesLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/deductiblesAmount"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEDUCTIBLES"
                            android:textColor="@color/insurance_light_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/deductiblesValues"
                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:text="@string/total_tp_value"
                            android:textColor="@color/insurance_dark_gray"

                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/insurance_background"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView

                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/idv"
                            android:textColor="@color/insurance_dark_gray"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvIdvValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:drawableLeft="@drawable/rupee_symbol_grey"
                            android:drawablePadding="4dp"
                            android:singleLine="true"
                            android:text="@string/idvValue"
                            android:textColor="@color/textColor"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        style="@style/textStyleHeading2"
                        android:id="@+id/tv_price_range"
                        android:textColor="@color/insurance_light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPremium"
                        style="@style/textStyleHeading2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/premium"
                        android:textColor="@color/insurance_dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvPremiumValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawableLeft="@drawable/rupee_icon_orange_small"
                        android:drawablePadding="4dp"
                        android:singleLine="true"
                        android:textColor="@color/orange"
                        android:textSize="20sp" />


                </LinearLayout>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/insurance_background" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_margin="@dimen/default_margin"
                    android:id="@+id/buyNow"
                    android:background="@drawable/button_effect"
                    android:layout_gravity="center"
                    android:text="BUY NOW"
                    android:textColor="@android:color/white" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>