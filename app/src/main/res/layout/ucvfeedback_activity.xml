                        <RadioGroup
                            android:id="@+id/priceRgrp"
                            android:layout_width="fill_parent"
                            android:layout_above="@+id/submit"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:visibility="visible"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbtn_priceLow"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:gravity="center"
                                android:textColor="@drawable/toggle_text_color"
                                style="@style/radio_button_style_wd_orange_bg"
                                android:text="Price is Low"/>
                            <RadioButton
                                android:id="@+id/rbtn_pricefair"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:textColor="@drawable/toggle_text_color"
                                style="@style/radio_button_style_wd_orange_bg"
                                android:text="Price is Fair"/>
                            <RadioButton
                                android:id="@+id/rbtn_priceHigh"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
