<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    cardView:cardElevation="1dp"
    cardView:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_stock_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivStockImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_weight="1.2"
            android:contentDescription="@string/emptyString"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="@drawable/item_select_background_white_drawable"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivMakeLogo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/emptyString"
                    android:src="@drawable/maruti"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/stockModelVersion"
                    style="@style/textStyleHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Alto K10 LXI" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/color"
                    android:layout_width="25dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center_vertical|start"
                    android:background="@drawable/oval_white_black_stroke"
                    android:contentDescription="@string/emptyString"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvRegNoTitle"
                    style="@style/textStyleHeading2Oragne"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reg. No. " />

                <TextView
                    android:id="@+id/tvRegNo"
                    style="@style/textStyleHeading2Oragne"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvKmDriven"
                    style="@style/textStyleHeading2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:text="1,45,000 kms"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvModelYear"
                    style="@style/textStyleHeading2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/calendar"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2012"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/fuletype"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Diesel"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStockPrice"
                    style="@style/textStyleHeading2Oragne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:drawablePadding="4dp"
                    android:gravity="left|center_vertical"
                    android:text="2.48 Lacs" />

                <ImageView
                    android:id="@+id/trustmark"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1.5"
                    android:src="@drawable/trustmark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
