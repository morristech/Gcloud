<LinearLayout
    android:id="@+id/leadStatusLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/leadSourceLayout"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <TextView
        style="@style/textStyleHeadingCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="STATUS"
        android:textColor="@color/textColor" />

    <HorizontalScrollView
        android:id="@+id/statusscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/leadStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/statusHot"
                style="@style/textStyleHeading2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_btn_wd_orange_bg"
                android:button="@null"
                android:gravity="center"

                android:text="@string/hot"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/statusWarm"
                style="@style/textStyleHeading2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_btn_wd_orange_bg"
                android:button="@null"
                android:gravity="center"

                android:text="@string/warm"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/statusCold"
                style="@style/textStyleHeading2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_btn_wd_orange_bg"
                android:button="@null"
                android:gravity="center"

                android:text="@string/cold"
                android:textSize="11sp" />

            <!--  <RadioButton
                  android:id="@+id/statusWalkinScheduled"
                  style="@style/textStyleHeading2"
                  android:layout_width="80dp"
                  android:layout_height="48dp"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                  android:layout_margin="5dp"
                  android:background="@drawable/radio_btn_wd_orange_bg"
                  android:button="@null"
                  android:layout_gravity="center_vertical"
                  android:gravity="center"
                  android:singleLine="false"

                  android:text="@string/status_walked_in_scheduled"
                  android:textSize="11sp"/>-->


            <RadioButton
                android:id="@+id/statusWalkin"
                style="@style/textStyleHeading2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_btn_wd_orange_bg"
                android:button="@null"
                android:gravity="center"

                android:text="@string/status_walked_in"
                android:textSize="11sp" />

            <!--     <RadioButton
                     android:id="@+id/statusBooked"
                     style="@style/textStyleHeading2"
                     android:layout_width="80dp"
                     android:layout_height="48dp"
                     android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                     android:layout_margin="5dp"
                     android:background="@drawable/radio_btn_wd_orange_bg"
                     android:button="@null"
                     android:gravity="center"

                     android:text="@string/status_booked"
                     android:textSize="11sp"/>-->

            <RadioButton
                android:id="@+id/statusConverted"
                style="@style/textStyleHeading2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_btn_wd_orange_bg"
                android:button="@null"
                android:gravity="center"

                android:text="@string/status_converted"
                android:textSize="11sp" />

            <RadioButton
                android:id="@+id/statusClosed"
                style="@style/textStyleHeading2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_btn_wd_orange_bg"
                android:button="@null"
                android:gravity="center"

                android:text="@string/closed"
                android:textSize="11sp" />

        </RadioGroup>
    </HorizontalScrollView>

</LinearLayout>