<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_background</item>
        <!--<item name="android:textColor">@color/white</item>-->
    </style>

    <!--<style name="MyCompatActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >-->
    <style name="MyCompatActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
        <item name="android:actionMenuTextColor">@color/textColor</item>
        <item name="actionMenuTextColor">@color/textColor</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MyCompatActionBar.Insurance" parent="MyCompatActionBar">
        <item name="android:background">@color/insurance_inspected_bg</item>
        <item name="background">@color/insurance_inspected_bg</item>
    </style>

    <style name="MyTheme" parent="Base.MyTheme"></style>

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="AppCompatActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:actionBarStyle">@style/MyCompatActionBar</item>
        <item name="actionBarStyle">@style/MyCompatActionBar</item>
        <item name="android:textColor">@color/textColor</item>
        <!--<item name="android:colorPrimar yDark">@color/slate_blue</item>-->
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:textAppearance">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:windowBackground">@color/background_floating_material_light</item>
        <item name="android:colorBackground">@color/background_floating_material_light</item>
        <item name="android:dialogTheme">@android:style/Theme.Holo.Light.Dialog</item>
    </style>

    <style name="AppCompatActionBarTheme.Insurance" parent="AppCompatNoActionBarTheme">
        <item name="android:actionBarStyle">@style/MyCompatActionBar.Insurance</item>
        <item name="actionBarStyle">@style/MyCompatActionBar.Insurance</item>
    </style>

    <style name="AppCompatActionBarTheme.Insurance.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>

        <!--     <item name="android:actionBarStyle">@style/MyCompatActionBar.Insurance</item>
             <item name="actionBarStyle">@style/MyCompatActionBar.Insurance</item>-->
        <item name="android:textColor">@color/textColor</item>
        <!--<item name="android:colorPrimar yDark">@color/slate_blue</item>-->
        <item name="android:icon">@drawable/ic_launcher</item>
        <!--  <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>-->
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:textAppearance">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:windowBackground">@color/background_floating_material_light</item>
        <item name="android:colorBackground">@color/background_floating_material_light</item>
        <item name="android:dialogTheme">@android:style/Theme.Holo.Light.Dialog</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GCloudTheme" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyCompatActionBar</item>
        <item name="actionBarStyle">@style/MyCompatActionBar</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Helvetica.ttf</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DatePickerDialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="colorAccent">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.DatePicker">
        <item name="android:headerBackground">@color/lms_orange</item>

    </style>

    <style name="AppCompatNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyCompatActionBar</item>-->

        <!--We will be using the toolbar so no need to show ActionBar-->

        <item name="android:colorAccent" tools:targetApi="21">@color/primary</item>
        <item name="android:textColorHighlight">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>
        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>

        <item name="colorAccent">@color/primary</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>


    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/hintColor</item>

        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">@color/hintColor</item>
        <item name="colorControlNormal">@color/hintColor</item>
        <item name="colorControlActivated">@color/hintColor</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:textSize">@dimen/hint_input_text_size</item>

    </style>

    <style name="AppCompatNoActionBarThemeWithOverflowMenuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyCompatActionBar</item>-->

        <!--We will be using the toolbar so no need to show ActionBar-->

        <item name="colorAccent">@color/green</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHighlight">@color/gray</item>

        <!--style to change overflow menu icon from 3 dots to a drawable -->
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>


        <!-- Support library compatibility -->
        <item name="actionOverflowMenuStyle">@style/ActionButtonOverflow</item>

        <item name="android:dropDownListViewStyle">@style/PopupMenu</item>
        <item name="dropDownListViewStyle">@style/PopupMenu</item>

        <item name="colorPrimary">@color/primary</item>

        <item name="colorPrimaryDark">@color/primary_dark</item>


    </style>

    <style name="ActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sort_white</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">50dip</item>


    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@android:color/white</item>
        <item name="background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppCompatWithAccent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyCompatActionBar</item>-->

        <!--We will be using the toolbar so no need to show ActionBar-->

        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/my_primary_text</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/my_secondary_text</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>


    </style>


    <!-- Overflow Menu icon style -->
    <!--<style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow</item>
    </style>-->

</resources>